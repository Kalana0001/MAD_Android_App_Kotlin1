<!-- res/drawable/rounded_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom line -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <size android:height="1dp" /> <!-- Line height -->
            <corners android:radius="0dp" /> <!-- No rounded corners for the line -->
        </shape>
    </item>
    <!-- Background with rounded corners -->
    <item android:top="1dp"> <!-- Position the background above the line -->
        <shape
            android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Background color of the EditText -->
            <corners android:radius="14dp" /> <!-- Radius for rounded corners -->
            <stroke
                android:width="1dp"
            android:color="@android:color/black" /> <!-- Border color -->
        </shape>
    </item>
</layer-list>
